@page "/"

<h3>@(showRegister ? "Register" : "Login")</h3>

@if (showRegister)
{
    <RegisterForm OnSwitchToLogin="ShowLogin" />
}
else
{
    <LoginForm OnSwitchToRegister="ShowRegister" />
}

@code {
    private bool showRegister = false;

    void ShowRegister() => showRegister = true;
    void ShowLogin() => showRegister = false;
}
