@page "/"
@using BlazorComponent.Components

<PageTitle>Login</PageTitle>

<div class="div-login-register">
    @if (visibleView == VisibleView.Login)
    {
        <LoginForm OnSwitchToRegister="ShowRegister" />
    }
    @if (visibleView == VisibleView.Register)
    {
        <RegisterForm OnSwitchToLogin="ShowLogin" />
    }
</div>
@code {
    private VisibleView visibleView = VisibleView.Login;

    void ShowRegister() => visibleView = VisibleView.Register;
    void ShowLogin() => visibleView = VisibleView.Login;
    
    public enum VisibleView
    {
        Login,
        Register
    }
}
